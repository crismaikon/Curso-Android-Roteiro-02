<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bl.roteiro02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="TRADUZIR"/>
            </intent-filter>
        </activity>
        <activity android:name=".FranceActivity" android:label="Traduzir para Francês">
            <intent-filter>
                <action android:name="TRADUZIR"/>

                <category android:name="FRANCES"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".InglesActivity" android:label="Traduzir para Inglês">
            <intent-filter>
                <action android:name="TRADUZIR"  />

                <category android:name="INGLES"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
